generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "***"
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  posts Post[]
  comments  Comment[]
}

model Post {
  id        Int     @default(autoincrement()) @id
  authorId  Int?
  content   String?
  published Boolean @default(false)
  title     String
  author    User?   @relation(fields: [authorId], references: [id])
  comments  Comment[]
}

model Comment {
  id        Int     @default(autoincrement()) @id
  authorId  Int
  content   String?
  author    User
  postId    Int
  post      Post    @relation(fields: [postId], references: [id])
}
